<Window x:Class="CMCS_UI.ClaimHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS_UI"
        mc:Ignorable="d"
        Title="ClaimHistory" Height="450" Width="800">
    <Grid>
        <DataGrid Name="ClaimHistoryDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim Date" Binding="{Binding ClaimDate}"/>
                <DataGridTextColumn Header="Hours Worked" Binding="{Binding HoursWorked}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding ClaimStatus}"/>
                <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
